#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="doas_askpass zzz" ;;
	*openrc*) hib="loginctl suspend" ; reb="loginctl reboot"; shut="loginctl poweroff";;
esac

cmds="\
ğŸ”’ lock		slock
ğŸ» hibernate	${hib:-doas_askpass loginctl suspend}
ğŸ”ƒ reboot	${reb:-doas_askpass reboot}
ğŸ–¥  shutdown	${shut:-doas_askpass shutdown -h now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
